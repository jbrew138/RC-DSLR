<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#bf7a09"
    tools:context="edu.uw.rc_dslrapp.MainActivity"
    android:columnCount="2"
    android:rowCount="7">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <Switch
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Record"
        android:id="@+id/switch1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:checked="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Refresh Video"
        android:id="@+id/button"
        android:layout_row="0"
        android:layout_column="1"
        android:enabled="true" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:id="@+id/webView"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected to RC-DSLR"
        android:id="@+id/textView5"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pan"
        android:id="@+id/textView"
        android:layout_row="3"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:background="#939393" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Focus"
        android:id="@+id/textView2"
        android:layout_row="3"
        android:layout_column="1"
        android:background="#939393"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <SeekBar
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/panBar"
        android:layout_row="4"
        android:layout_column="0"
        android:indeterminate="false"
        android:progress="50"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:background="#939393" />

    <SeekBar
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/focusBar"
        android:layout_row="4"
        android:layout_column="1"
        android:indeterminate="false"
        android:progress="50"
        android:layout_gravity="fill_horizontal"
        android:background="#939393" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tilt"
        android:id="@+id/textView3"
        android:layout_row="5"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:background="#939393" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zoom"
        android:id="@+id/textView4"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:gravity="center"
        android:background="#939393" />

    <SeekBar
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/tiltBar"
        android:layout_row="6"
        android:layout_column="0"
        android:indeterminate="false"
        android:progress="50"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:background="#939393"
        android:layout_marginBottom="30dp" />

    <SeekBar
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/zoomBar"
        android:layout_row="6"
        android:layout_column="1"
        android:indeterminate="false"
        android:progress="50"
        android:layout_gravity="fill_horizontal"
        android:background="#939393"
        android:layout_marginBottom="30dp" />
</GridLayout>
